%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

{erl_opts, [
        debug_info,
        warn_obsolete_guard,
        warn_unused_import,
        warn_shadow_vars,
        warn_export_vars,
        warn_unused_function,
        warn_deprecated_function,
        warn_obsolete_guard,
        warn_unused_import,
        warn_export_all
    ]}.

{post_hooks, [{compile, "make bertext"}]}.
{cover_enabled, true}.
{cover_print_enabled, true}.

{deps, [
        {proper, "1.0.*", {git, "git://github.com/manopapad/proper.git", "ca96110cb0bbbf31fbc7563e0424b2f2daafd156"}}
]}.
